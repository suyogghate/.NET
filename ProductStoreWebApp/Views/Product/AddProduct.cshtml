@using ProductStoreWebApp.Models;

<h2>Add Product Form</h2>

<form action="/product/createProduct" method="post">
   
  <div class="container">
    <label for="id"><b>Id: </b></label>
    <input type="text" placeholder="Enter Product Id" name="id" required>
    <br>
    <br>
    <label for="title"><b>Title: </b></label>
    <input type="text" placeholder="Enter Product Title" name="title" required>
    <br>
    <br>
    <label for="unitprice"><b>Unit Price: </b></label>
    <input type="text" placeholder="Enter Unit price" name="unitprice" required>
    <br>
    <br>
    <label for="quantity"><b>Quantity: </b></label>
    <input type="text" placeholder="Enter Product Quantity" name="quantity" required>
        <br>
    <button type="submit">Submit</button>
